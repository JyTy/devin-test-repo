generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id              Int      @id @default(autoincrement())
  email           String   @unique
  password        String
  notes           Note[]
  created_datetime DateTime @default(now())
}

model Note {
  id              Int      @id @default(autoincrement())
  title           String?
  text            String
  created_datetime DateTime @default(now())
  updated_datetime DateTime @updatedAt
  author          User     @relation(fields: [authorId], references: [id])
  authorId        Int
}
